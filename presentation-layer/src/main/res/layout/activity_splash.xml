<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.joshnark.presentation_layer.activities.SplashActivity">

    <com.joshnark.presentation_layer.views.GlideImageView
        android:id="@+id/imageView_logo"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:res="@drawable/logo"
        tools:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView_sampleText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:textAlignment="center"
        android:fontFamily="@font/coolvetica"
        android:textSize="@dimen/font_large"
        android:textColor="@android:color/holo_purple"
        android:gravity="center"
        android:text="@string/splash_screen"
        android:alpha="0"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/imageView_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>