<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_header"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintTop_toTopOf="parent"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_categories"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="visible"
        android:alpha="1"
        app:srcCompat="@drawable/ic_bars_solid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_startSearch"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="visible"
        android:alpha="1"
        app:srcCompat="@drawable/ic_search_solid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_endSearch"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:alpha="0"
        app:srcCompat="@drawable/ic_xmark_solid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <EditText
        android:id="@+id/editText_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/coolvetica"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/cod_gray"
        android:background="@drawable/background_edit_text_search"
        android:layout_marginEnd="30dp"
        android:singleLine="true"
        android:lines="1"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Nintendo 64"
        />

</androidx.constraintlayout.widget.ConstraintLayout>